    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach backend with nodemon",
            "request": "attach",
            "processId": "${command:PickProcess}",            
            "type": "node",
            "sourceMaps": true,
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8010/",
            "webRoot": "${workspaceFolder}/node/frontend"
        }
    ]
}
