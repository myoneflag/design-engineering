{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "types": [
      "webpack-env",
      "mocha",
      "chai"
    ],
    "emitDecoratorMetadata": true,
    "paths": {
      "typeorm": ["src/typeorm.d.ts"],
      "tslib" : ["node_modules/tslib/tslib.d.ts"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true, // for flatten-js.
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
